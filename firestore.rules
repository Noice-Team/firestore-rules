service cloud.firestore {
  match /databases/{database}/documents {
    match /Users/{userId} {
    	allow read;
    	allow create: if !exists(/databases/$(database)/documents/users/$(request.auth.uid));
      allow update: if request.auth.uid == userId;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}